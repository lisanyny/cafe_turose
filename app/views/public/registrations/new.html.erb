<div class="container">
  <span class="page-title">新規会員登録</span>
  <div class="row">
    <%= render "public/shared/error_messages", resource: resource %>
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <table>
        <tr>
          <th>名前</th>
          <td><%= f.label "(姓)　" %><%= f.text_field :last_name %></td>
          <td><%= f.label "(名)　" %><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.label "(セイ)" %><%= f.text_field :last_name_kana %></td>
          <td><%= f.label "(メイ)" %><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
          <td></td>
        </tr>
        <tr>
          <th>電話番号(ハイフンなし)</th>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          <td></td>
        </tr>
        <tr>
          <th>パスワード(6文字以上)</th>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          <td></td>
        </tr>
        <tr>
          <th>パスワード(確認用)</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          <td></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "新規登録", class: 'session-btn' %></td>
          <td></td>
        </tr>
      </table>
    <% end %>
  </div>
  <span class="page-title">既に登録済みの方</span><br>
  <%= link_to "こちら", customer_session_path, class: 'link-text' %>からログインしてください
</div>