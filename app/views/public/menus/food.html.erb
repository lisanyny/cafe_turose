<div class="container">
  <span class="page-title">Food</span>
  <div class="row">
    <% @menus.each do |menu| %>
    <div class="col-4">
      <div class="menu-position">
        <% if menu.image.attached? %>
          <%= image_tag menu.image, width: 'auto', height: '200px' %>
        <% else %>
          <%= image_tag 'no_image', size: '200x200' %>
        <% end %>
        <div class="menu-title"><%= menu.item %></div>
        <div class="menu-introduction"><%= menu.introduction %></div>
        <div class="menu-price"><%= menu.with_tax_price %>円</div>
      </div>
    </div>
    <% end %>
  </div>
  <%= link_to "≪ 戻る", menus_path, class: 'link' %>
</div>