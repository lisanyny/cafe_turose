<div class="container">
  <span class="page-title">ジャンル編集</span>
  <%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
  <div class="row">
    <table>
      <tr>
        <th>ジャンル名</th>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit "変更を保存", class: 'edit-btn' %></td>
      </tr>
    </table>
  </div>
  <% end %>
</div>