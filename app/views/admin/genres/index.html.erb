<div class="container">
  <span class="page-title">ジャンル一覧・追加</span>
  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <div class="col-12">
        <table>
          <th>ジャンル名</th>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '新規登録', class: 'session-btn' %></td>
        </table>
      </div><br>
    <% end %>
    <div class="col-8">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: 'link' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>