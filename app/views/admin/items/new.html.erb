<div class="container">
  <span class="page-title">商品新規登録</span>
  <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
  <div class="row">
    <table>
      <tr>
        <th>商品画像</th>
        <td></td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td></td>
      </tr>
      <tr>
        <th>税抜価格</th>
        <td><%= f.text_field :price %></td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td></td>
      </tr>
    </table>
  </div>
  <%= f.submit "新規登録", class: 'edit-btn' %>
  <% end %>
</div>