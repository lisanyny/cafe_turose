<div class="container">
  <span class="page-title">注文履歴詳細</span>
  <div class="row">
    <div class="col-8">
      <table>
        <tr>
          <th>購入者</th>
          <td><%= @order.last_name+"　"+@order.first_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td></td>
        </tr>
      </table>
    </div>
    <div class="col-4">
      <table>
        <tr>
          <th>商品合計</th>
          <td></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td></td>
        </tr>
      </table>
    </div>
    <table class="table table-hover table-inverse">
      <thead>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
        <th>製作ステータス</th>
        <th></th>
      </thead>
      <tbody>
        <%= @order.order_details.each do |order_detail| %>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.with_tax_price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.with_tax_price*order_detail.amount %></td>
        <td></td>
        <td></td>
      </tbody>
    </table>
  </div>
</div>