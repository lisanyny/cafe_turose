<div class="container">
  <span class="page-title">管理者ログイン</span>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <table class="session-table">
        <tr>
          <th class="session-th"><%= f.label :email, "メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th class="session-th"><%= f.label :password, "パスワード" %></th>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "ログイン", class: "session-btn" %></td>
        </tr>
      </table>

    <% end %>
  </div>
</div>




<%= render "admin/shared/links" %>
