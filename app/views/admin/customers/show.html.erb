<div class="container">
  <span class="page-title"><%= @customer.first_name+@customer.last_name%>さんの会員詳細</span>
  <div class="row">
    <table>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>名前</th>
        <td><%= @customer.first_name+'　'+@customer.last_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @customer.first_name_kana+'　'+@customer.last_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <% if is_deleted == true %>
            <span class="status-true">退会</span>
          <% else %>
            <span class="status-false">有効</span>
          <% end %>
        </td>
      </tr>
      <tr>
        <th></th>
        <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'edit-btn' %></td>
      </tr>
    </table>
  </div>
</div>