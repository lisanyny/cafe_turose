<div class="container">
  <span class="page-title"><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</span>
  <div class="row">
    <%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>
    <table>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
        <td></td>
      </tr>
      <tr>
        <th>名前　　　　　　(姓)</th>
        <td><%= f.text_field :last_name %>　<strong>(名)</strong></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <th>フリガナ　　　(セイ)</th>
        <td><%= f.text_field :last_name_kana %><strong>(メイ)</strong></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td><%= f.text_field :postal_code %></td>
        <td></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
        <td></td>
      </tr>
      <tr>
        <th>電話番号(ハイフンなし)</th>
        <td><%= f.text_field :telephone_number %></td>
        <td></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
        <td></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <div class="radio_inline">
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, '有効' %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, '退会' %>
            </div>
          </div>
        </td>
        <td></td>
      </tr>
    </table>
  </div>
  <%= f.submit "変更を保存", class: 'edit-btn' %>
  <% end %>
</div>