<div class="container">
  <span class="page-title">カフェメニュー詳細</span>
  <div class="row">
    <!--画像表示-->
    <div class="col-4 menu-show">
      <% if @menu.image.attached? %>
        <%= image_tag @menu.image, width: 'auto', height: '300px' %>
      <% else %>
        <%= image_tag 'no_image', size: '200x200' %>
      <% end %>
    </div>
    <!--画像以外のメニュー詳細-->
    <div class="col-8 menu-show">
      <table>
        <tr>
          <th>商品名</th>
          <td><%= @menu.item %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @menu.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @menu.genre %></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <td>
            <%= @menu.with_tax_price %>
            (<%= @menu.price %>円)
          </td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @menu.is_active == true %>
              <span class="status-false">販売中</span>
            <% else %>
              <span class="status-true">販売停止中</span>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_menu_path(@menu.id), class: 'edit-btn' %>
    </div>
  </div>
</div>